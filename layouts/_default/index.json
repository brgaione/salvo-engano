{
    "version": "https://jsonfeed.org/version/1",
    "title": {{ .Site.Title | jsonify }},
    "home_page_url": {{ .Site.BaseURL | jsonify }},
    "feed_url": {{ .Permalink | jsonify }},
    "items": [
        {{- $pages := where .Site.RegularPages "Type" "in" (slice "posts" "filosofos") -}}
        {{- $len := (len $pages) -}}
        {{- range $index, $page := $pages }}
        {
            "id": {{ .Permalink | jsonify }},
            "url": {{ .Permalink | jsonify }},
            "title": {{ .Title | jsonify }},
            "content_text": {{ .Plain | jsonify }},
            "content_html": {{ .Content | jsonify }},
            "date_published": {{ .Date.Format "2006-01-02T15:04:05Z07:00" | jsonify }},
            "date_modified": {{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" | jsonify }},
            {{- with .Params.areas }}
            "areas": {{ . | jsonify }},
            {{- end }}
            {{- with .Params.periodos }}
            "periodos": {{ . | jsonify }},
            {{- end }}
            {{- with .Params.escolas }}
            "escolas": {{ . | jsonify }},
            {{- end }}
            {{- with .Params.filosofos }}
            "filosofos": {{ . | jsonify }},
            {{- end }}
            {{- with .Params.tags }}
            "tags": {{ . | jsonify }},
            {{- end }}
            "summary": {{ .Summary | jsonify }}
        }{{ if ne (add $index 1) $len }},{{ end }}
        {{- end }}
    ]
}
